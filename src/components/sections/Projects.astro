---
import { projects } from "@/cv";
import Section from "@/components/Section.astro";
---

<Section title="Projects">
    <ul>
        {projects.map(({url, description, highlights, name}) => {
            return <li>
                <article>
                    <header>
                        <a title={`Ver el proyecto ${name}`} href={url}>
                            <h3>{name}</h3>
                        </a>
                        <p>{description}</p>
                    </header>
                    <footer>
                        {highlights.map((highlight) => (
                            <span>{highlight}</span>
                        ))}
                    </footer>
                </article>    
            </li>
        })}
    </ul>
</Section>

<style>
    ul {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
        margin-inline: -16px;
    }

    article {
        border-radius: 8px;
        border: 1px solid #f2f2f2;
        gap: 1rem;
        display: flex;
        flex-direction: column;
        padding: 1rem;
        height: 100%;
    }

    header {
        flex: 1;
    }

    h3 {
        margin-bottom: 4px;
    }

    a {
        color: #111;

        &:hover {
            text-decoration: underline;
        }
    }

    p {
        font-size: 0.75rem;
        line-height: 1.2rem;
        margin-bottom: 4px;
    }

    footer {
        display: flex;
        flex-wrap: wrap;
        gap: 4px;
        font-size: 0.6rem;
    }

    footer span {
        border-radius: 6px;
        background-color: #eee;
        color: #444;
        font-size: 0.6rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
    }

    @media (width <= 700px) {
        ul {
            margin-inline: 0px;
        }

        article {
            border: none;
            box-shadow: 0 1px 1px #f2f2f2;
            padding: 0 0 16px 0;
        }
    }
</style>